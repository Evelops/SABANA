<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EE"
    tools:context=".FirstActivity">

    <Button
        android:id="@+id/but_start"
        android:layout_width="276dp"
        android:layout_height="45dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="356dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="onButtonStartClick"
        android:text="로그인"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_loc"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="465dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="onButtonLocClick"
        android:text="위치설정"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="276dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="521dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Input nick name"
        android:inputType="text"
        android:maxLength="10"
        android:padding="8dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="465dp"
        android:text="위치를 설정해주세요"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.884"
        app:srcCompat="@drawable/sbn50"
        />

</androidx.constraintlayout.widget.ConstraintLayout>